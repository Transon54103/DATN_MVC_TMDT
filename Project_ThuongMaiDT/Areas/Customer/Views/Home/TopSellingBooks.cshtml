                <use xlink:href="#alt-arrow-left-outline"></use>
            </svg>
        </div>
        <div class="swiper product-swiper swiper-initialized swiper-horizontal swiper-backface-hidden">
            <div class="swiper-wrapper" id="swiper-wrapper-2aba4a0aa84f2bf3" aria-live="polite" style="transition-duration: 0ms; transform: translate3d(-238.667px, 0px, 0px); transition-delay: 0ms;">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide swiper-slide-active" role="group" aria-label="2 / 6" style="width: 218.667px; margin-right: 20px;">
                        <div class="card position-relative p-4 border rounded-3">
                            @if (item.ProductImages != null && item.ProductImages.Count > 0)
                            {
                                <img src="@item.ProductImages[0].ImageUrl" class="img-fluid shadow-sm" alt="@item.Title" />
                            }
                            else
                            {
                                <img src="https://placehold.co/500x600/png" class="card-img-top rounded w-100" />
                            }
                            <h6 class="mt-4 mb-0 fw-bold"><a href="index.html">"@item.Title"</a></h6>
                            <div class="review-content d-flex">
                                <p class="my-2 me-2 fs-6 text-black-50">@item.Authors.Name</p>
                                <div class="rating text-warning d-flex align-items-center">
                                    <svg class="star star-fill">
                                        <use xlink:href="#star-fill"></use>
                                    </svg>
                                    <svg class="star star-fill">
                                        <use xlink:href="#star-fill"></use>
                                    </svg>
                                    <svg class="star star-fill">
                                        <use xlink:href="#star-fill"></use>
                                    </svg>
                                    <svg class="star star-fill">
                                        <use xlink:href="#star-fill"></use>
                                    </svg>
                                    <svg class="star star-fill">
                                        <use xlink:href="#star-fill"></use>
                                    </svg>
                                </div>
                            </div>
                            <span class="price text-primary fw-bold mb-2 fs-5">
                                @item.Price.ToString("C0", new CultureInfo("vi-VN"))
                            </span>
                            <div class="card-concern position-absolute start-0 end-0 d-flex gap-2">
                                            <button class="btn btn btn-dark add-to-cart" data-product-id="@item.Id">
                                                <svg class="cart">
                                                    <use xlink:href="#cart"></use>
                                                </svg>
                                            </button>
                                <a asp-action="Details"
                                   asp-route-productId="@item.Id" class="btn btn-dark">
                                    <span>
                                        <svg class="wishlist">
                                            <use xlink:href="#heart"></use>
                                        </svg>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>

