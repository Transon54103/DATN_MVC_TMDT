@{
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
@model List<Author>

<div class="card shadow border-0 my-4">
    <div class=" card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">List Author</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Author" asp-action="Upsert" class="btn btn-primary">
                    Create New Author <i class="bi bi-plus-square"></i>
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Tên tác giả</th>
                    <th>Ảnh đại diện</th>
                    <th>Hành động</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/author.js"></script>
}
