@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Xác thực email";
}
@if (User.IsInRole(SD.Role_Admin))
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 border-0 rounded-4 text-center" style="max-width: 400px;">
        <div class="card-body">
            <div class="mb-3">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            </div>
            <h2 class="fw-bold">@ViewData["Title"]</h2>
            <p class="">Xác thực thành công! Bạn có thể đăng nhập ngay bây giờ.</p>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success mt-3 px-4">Đăng nhập</a>

        </div>
    </div>
</div>

