@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Họ và Tên -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" style="font-size: 16px;" placeholder="Nhập họ và tên của bạn" />
                <label asp-for="Input.Name" class="form-label" >Họ và Tên</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Số điện thoại -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại của bạn" style="font-size: 16px;" />
                <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Địa chỉ -->
            <div class="form-floating mb-3">
                <input asp-for="Input.StreetAddress" class="form-control" style="font-size: 16px;" placeholder="Nhập địa chỉ của bạn" />
                <label asp-for="Input.StreetAddress" class="form-label">Địa chỉ</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>

            <!-- Thành phố -->
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" style="font-size: 16px;" placeholder="Nhập thành phố của bạn" />
                <label asp-for="Input.City" class="form-label">Thành phố</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <!-- Tỉnh / Bang -->
            <div class="form-floating mb-3">
                <input asp-for="Input.State" class="form-control" style="font-size: 16px;" placeholder="Nhập tỉnh / bang của bạn" />
                <label asp-for="Input.State" class="form-label">Tỉnh / Bang</label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>

@*             <!-- Mã bưu điện -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PostalCode" class="form-control" placeholder="Nhập mã bưu điện" />
                <label asp-for="Input.PostalCode" class="form-label">Mã bưu điện</label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div> *@

            <button type="submit" class="w-100 btn btn-lg btn-primary">Lưu thông tin</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
