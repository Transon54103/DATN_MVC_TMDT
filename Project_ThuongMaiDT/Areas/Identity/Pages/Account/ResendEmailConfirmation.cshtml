@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Gửi lại email xác thực";
}

@if (User.IsInRole(SD.Role_Admin))
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 border-0 rounded-4 text-center" style="max-width: 400px;">
        <div class="card-body">
            <div class="mb-3">
                <i class="bi bi-envelope-check-fill text-primary" style="font-size: 3rem;"></i>
            </div>
            <h2 class="fw-bold">@ViewData["Title"]</h2>
            <p class="mb-3">Nhập địa chỉ email của bạn để nhận lại liên kết xác thực.</p>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Gửi lại</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
